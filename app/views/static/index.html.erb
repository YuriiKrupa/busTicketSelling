
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h2 align="center">Book your ticket</h2>

<div class="form-group">
      <label for="From">From:</label>
      <select class="form-control" id="From">
        <option value="" disabled selected>Select trip route</option>
        <% trips = Trip.all %>
        <% trips.each do |t| %>
          <option value=""><%= t.departure + ' - ' + t.destination%></option>
        <% end -%>

      </select>
    </div>

<div class="row">
  <div class="col-6">
    <div class="form-group">
      <label for="From">From:</label>
      <select class="form-control" id="From">
        <option value="" disabled selected>Select departure city</option>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
      </select>
    </div>
  </div>
  <div class="col-6">
    <div class="form-group">
      <label for="To">To:</label>
      <select class="form-control" id="To">
       <option value="" disabled selected>Select destination city</option>
        <option value=""><%=Trip.first.departure%></option> 
        <%# @trip.each do |t| %>
          <%#= t.departure +" - "+ t.destination %>
        <%# end -%>
       <option>1</option>
       <option>2</option>
       <option>3</option>
       <option>4</option>
     </select>
   </div>
 </div>
</div>

<div class="form-group row">
  <div class="col-4">
    <label for="example-date-input" class="col-form-label">Departure</label>
    <input class="form-control" type="date" id="example-date-input">
  </div>
</div>

<button type="button" class="btn btn-primary btn-lg">Search</button>