<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Departure</th>
      <th>Destination</th>
      <!-- <th>Is express</th> -->
      <!-- <th>Route</th> -->
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.departure %></td>
        <td><%= trip.destination %></td>
        <!-- <td><%#= trip.is_express %></td> -->
        <!-- <td><%#= trip.route %></td> -->
        <td><%=trip.price %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

