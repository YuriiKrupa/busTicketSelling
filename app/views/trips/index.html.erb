<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Departure</th>
      <th>Destination</th>
      <!-- <th>Is express</th> -->
      <!-- <th>Route</th> -->
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.departure %></td>
      <td><%= trip.destination %></td>
      <!-- <td><%#= trip.is_express %></td> -->
      <!-- <td><%#= trip.route %></td> -->
      <td><%=trip.price %></td>
      <td>Buy <%#= link_to 'Book', booked_path, class: 'btn btn-success' %></td> <!-- Should be link -->
      <% if user_signed_in? && current_user.is_admin %>
      <td><%= link_to 'Show', trip, class: 'btn btn-primary' %></td>
      <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.is_admin %>
<%= link_to 'New Trip', new_trip_path, class: 'btn btn-success' %>
<%end%>